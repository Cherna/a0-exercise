.modal-container
  transition height animation-duration ease-in-out

  &.is-animating
    .show-more
      pointer-events none
  
  &.is-open
    transition height animation-duration ease-in-out
    
  .permit-item
    opacity 1
    transition opacity animation-duration ease-in-out
      
    &.is-hidden
      opacity 0
      transition opacity animation-duration ease-in-out